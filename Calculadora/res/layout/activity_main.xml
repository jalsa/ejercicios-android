<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <EditText
        android:id="@+id/entrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_vertical|right"
        android:inputType="numberDecimal"
        android:textAlignment="viewEnd" >

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="3"
            android:clickable="false" />

        <Button
            android:id="@+id/borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pulsarBorrar"
            android:text="@string/borrar"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >

            <Button
                android:id="@+id/siete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/siete"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

            <Button
                android:id="@+id/cuatro"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/cuatro"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

            <Button
                android:id="@+id/uno"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/uno"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

            <Button
                android:id="@+id/punto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/punto"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >

            <Button
                android:id="@+id/ocho"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/ocho"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

            <Button
                android:id="@+id/cinco"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/cinco"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

            <Button
                android:id="@+id/dos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/dos"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

            <Button
                android:id="@+id/cero"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/cero"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >

            <Button
                android:id="@+id/nueve"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/nueve"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

            <Button
                android:id="@+id/seis"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/seis"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

            <Button
                android:id="@+id/tres"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/tres"
                android:onClick="pulsarNumero"
                android:layout_weight="1" />

            <Button
                android:id="@+id/igual"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/igual"
                android:onClick="pulsarOperacion"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >

            <Button
                android:id="@+id/entre"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/entre"
                android:onClick="pulsarOperacion"
                android:layout_weight="1" />

            <Button
                android:id="@+id/por"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/por"
                android:onClick="pulsarOperacion"
                android:layout_weight="1" />

            <Button
                android:id="@+id/menos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/menos"
                android:onClick="pulsarOperacion"
                android:layout_weight="1" />

            <Button
                android:id="@+id/mas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/mas"
                android:onClick="pulsarOperacion"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
